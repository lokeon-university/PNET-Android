<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <include
            android:id="@+id/top_toolbar"
            layout="@layout/toolbar_top"></include>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/banner_title_1">
            <include
                layout="@layout/activity_main_titles"
                ></include></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/lvMain_layout_home"
            android:layout_below="@id/banner_title_1"
            >
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:dividerHeight="10dp"
                android:id="@+id/lvMain_home"
                android:paddingBottom="?actionBarSize"
                android:gravity="center_horizontal|center"
                android:layout_margin="20dp"
                >
            </ListView>

            <include
                layout="@layout/activity_main_banner"
                ></include>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/bottom_toolbar"
                layout="@layout/toolbar_bottom"></include>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>