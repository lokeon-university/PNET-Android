<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/assistant_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/top_toolbar"
            layout="@layout/toolbar_top"></include>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/AssistantsTop"

                >

                <es.manguca.Utils.LetterImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/iconAssistants"
                    android:layout_margin="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/NameAssistant"
                    android:text="Name"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_margin="8dp"
                    android:layout_toRightOf="@+id/iconAssistants"
                    android:gravity="center_vertical"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/LastNameAssistant"
                    android:text="Last Name"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_margin="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/DniAssistant"
                    android:text="Dni"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_margin="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/EmailAssistant"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_margin="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/PhoneAssistant"
                    android:text="Phone"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_margin="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/BirthAssistant"
                    android:text="Birthday"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_margin="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/InsDateAssistant"
                    android:text="InscriptionDate"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_margin="8dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/bottom_toolbar"
                layout="@layout/toolbar_bottom"></include>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>