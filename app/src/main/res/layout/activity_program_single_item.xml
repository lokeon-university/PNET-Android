<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/program_single_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <es.manguca.Utils.LetterImageView
            android:id="@+id/ivLetter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/tvRole_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivLetter"
            android:layout_toEndOf="@+id/ivLetter"
            android:text="@string/role"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRole_main"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/ivLetter"
            android:text="@string/program"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMain"
            android:layout_toEndOf="@+id/ivLetter"
            android:text="@string/description"
            android:textSize="16sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>